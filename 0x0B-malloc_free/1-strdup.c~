#include <stdlib.h>
/**
 * _strdup - prints buffer in hexa
 * @str: char
 *
 * Return: char *
 */
char *_strdup(char *str)
{
	char *pt;
	int i, size;

	size = 0;
	if (str != NULL)
	{
	for (i = 0; str[i] != '\0'; i += 1)
		{
			size++;
		};
		if (size == 0)
			pt = NULL;
		else
			pt = malloc(size + 1);
		if (pt != NULL)
		{
			for (i = 0; str[i] != '\0'; i += 1)
				*(pt + i) = *(str + i);
			*(pt + i) = '\0';
		}
	} else
		return (NULL);

	return (pt);
}
